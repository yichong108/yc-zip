{
  "name": "yc-zip",
  "version": "2.0.2",
  "author": "YC",
  "license": "MIT",
  "description": "A command-line tool for zipping files and folders",
  "repository": {
    "url": "https://github.com/yichong108/yc-zip"
  },
  "main": "dist/yc-zip.umd.js",
  "module": "dist/yc-zip.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "yc-zip": "bin/yc-zip.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "test:smoke": "vite build && npm link && node bin/yc-zip.js -i dist -n dist_${YYYYMMDDHHmm}.zip",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "zip",
    "compression",
    "cli",
    "archive"
  ],
  "dependencies": {
    "archiver": "^7.0.1",
    "chalk": "^4.1.2",
    "commander": "^13.1.0",
    "dayjs": "^1.11.13",
    "nanoid": "^5.1.3"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/node": "^22.13.10",
    "vitest": "^3.0.8"
  }
}
